<div class="container">
 <div class="row mb-3 mx-auto">
  <div class="col-8 text-left">
   <h3>注文履歴一覧</h3>
  </div>
 </div>

  <div class="mx-5">
   <table class="table">
    <thead class="thead-light">
      <tr>
        <th scope="col">購入日時</th>
        <th scope="col">購入者</th>
        <th scope="col">注文個数</th>
        <th></th><th></th>
        <th scope="col">注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <div class="item-list">
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S').to_s, admin_order_path(order)  %></td>
            <td><%= order.member.last_name + order.member.first_name %></td>
            <td><%= order.order_items.sum(:amount) %></td>
            <td></td><td></td>
            <td><%= order.order_status %></td>
          </tr>
        <% end %>
      </div>
      <%= paginate @orders %>
     </tbody>
  </table>
 </div>
</div>