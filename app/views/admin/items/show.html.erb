<div class="container mb-3">
  <div class="mx-auto col-lg-12">
    <div class="row">
      <div class="col-10 offset-1 mb-3">
        <h3 class="page_title">商品詳細</h3>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col">
        <%= attachment_image_tag @item, :image, size: "400x300", fallback: "no_image.jpg" %>
      </div>
      <div class="col">
        <table class="table table-borderless">
          <tr>
            <th>商品名</th>
            <td class="pt-3" style="font-size: 20px;"><%= @item.name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td class="pt-3" style="font-size: 20px;"><%= @item.introduction %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td class="pt-3" style="font-size: 20px;"><%= @item.genre.name %></td>
          </tr>
          <tr>
            <th>税込価格<br>(税抜価格)</th>
            <td class="pt-3" style="font-size: 20px;"><%= ( @item.price * 1.1 ).floor.to_s(:delimited)  %> 円
            <br>(<%= @item.price.to_s(:delimited) %>) 円</td>
          </tr>
            <th>販売ステータス</th>
            <td><%= @item.sales_status ? '販売中' : '販売停止中' %></td>
        </table>
        <%= link_to "編集する", edit_admin_item_path(@item), class: 'btn btn-success offset-7' %>
      </div>
    </div>
  </div>
</div>