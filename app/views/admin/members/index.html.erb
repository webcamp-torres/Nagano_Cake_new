<% provide(:title, "会員一覧") %>
<div class="container">
<h2 class="head-line title_h2 text-center">会員一覧</h2>
<div class="row">
  <div class="col-md-12">
    <table class="table table-hover table-bordered table-condensed  center-block">
      <thead>
        <tr class="info">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
          <% @members.each do |member| %>
          <tr>
            <td class="info">
              <%= member.id %>
            </td>
            <td class="text-left">
              <%= link_to admin_member_path(member), class: "btn-link"  do %>
                
                <%= member.last_name %><%= member.first_name %>
              <% end %>
            </td>
            <td class="text-left">
              <%= member.email %>
            </td>
            <td class="col-md-2">
              <% if member.unsubscribe_status == true%>
                <p><i class="fas fa-bullseye blue"></i>退会済</p>
              <% else %>
                <p><i class="fas fa-bullseye red"></i>有効</p>
              <% end %>
            </td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>