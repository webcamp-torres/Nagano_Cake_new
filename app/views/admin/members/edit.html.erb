<% provide(:title, "会員情報編集") %>
<div class="container">
<div class="row">
  <div class="col-md-12">
    <h2 class="head-line title_h2 text-center">
      <%= @member.last_name %><%= @member.first_name %>さんの会員情報編集
    </h2>
      <%= form_with(model: @member, url:admin_member_path, local: true ,method: :patch) do |f| %>
      <div class="col-md-12">
        <div class="form-group col-md-12">
        <%= f.label :"会員ID", class: "col-md-4 control-label" %>
        <%= f.label :"#{@member.id}" %>
        </div>
        <div class="form-group col-md-12">
        <%= f.label :"氏名", class: "col-md-4 control-label" %>
        <%= f.text_field :last_name, class: "col-md-3 form-control-static name" %>　
        <%= f.text_field :first_name, class: "col-md-3 form-control-static name" %>
        </div>
        <div class="form-group col-md-12">
        <%= f.label :"フリガナ", class: "col-md-4 control-label" %>
        <%= f.text_field :last_name_kana, class: "col-md-3 form-control-static name" %>
        <%= f.text_field :first_name_kana, class: "col-md-3 form-control-static name" %>
        </div>
        <div class="form-group col-md-12">
        <%= f.label :"郵便番号", autofocus: true, class: "col-md-4 control-label" %>
        <%= f.text_field :postal_code, class: "col-md-4 form-control-static postal_code" %>
        </div>

        <div class="form-group col-md-12">
        <%= f.label :"住所", class: "col-md-4 control-label" %>
        <%= f.text_field :address, autofocus: true, class: "col-md-7 form-control-static address"  %>
        </div>

        <div class="form-group col-md-12">
        <%= f.label :"電話番号", class: "col-md-4 control-label" %>
        <%= f.text_field :phone_number, class: "col-md-4 form-control-static" %>
        </div>
        <div class="form-group col-md-12">
        <%= f.label :"メールアドレス", class: "col-md-4 control-label" %>
        <%= f.text_field :email, class: "col-md-7 form-control-static"%>
        </div>
        
        
        <div class="form-group col-md-12">
        <%= f.label :"会員ステータス", class: "col-md-4 control-label" %>
        　<%= f.radio_button :unsubscribe_status, true %>
        　<%= f.label :unsubscribe_status, "退会済", {value: :true, style: "display: inline-block;"} %>
        　<%= f.radio_button :unsubscribe_status, false %>
        　<%= f.label :unsubscribe_status, "有効", {value: :false, style: "display: inline-block;"} %>
      </div>
    </div>  
  
  <div class="actions  col-md-12 text-center">
        <%= f.submit '変更を保存する' ,class: "btn btn-primary save col-xs-6" %>
  </div>
  <% end %>
  <div class="col-md-12 text-center">
      <%= link_to "戻る", admin_member_path, class: "glyphicon glyphicon-home btn btn-info" %>
  </div>
  
</div>
</div>