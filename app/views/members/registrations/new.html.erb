<div class = "container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="head-line title_h2 text-center">新規会員編集</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="col-md-12 text-center">
          <div class="form-group col-md-12">
            <%= f.label :"氏名", class: "col-md-4 control-label" %>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "last_name col-md-2", placeholder: '令和' %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "first_name col-md-2", placeholder: '道子' %>
          </div>

          <div class="form-group col-md-12">
            <%= f.label :"カナ", class: "col-md-4 control-label" %>
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "last_name_kana col-md-2 form-control-static name", placeholder: 'レイワ' %>
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "first_name_kana col-md-2 form-control-static name", placeholder: 'ミチコ' %>
          </div>

          <div class="form-group col-md-12">
            <%= f.label :"郵便番号", class: "col-md-4 control-label" %>
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "col-md-4 form-control-static", placeholder: '0000000' %>
          </div>

          <div class="form-group col-md-12">
            <%= f.label :"住所", class: "col-md-4 control-label" %>
            <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "col-md-4 form-control-static", placeholder: '東京都渋谷区代々木神園町0-0' %>
          </div>

          <div class="form-group col-md-12">
            <%= f.label :"電話番号(ハイフンなし)", class: "col-md-4 control-label" %>
            <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: "col-md-4 form-control-static", placeholder: '00000000000' %>
          </div>

          <div class="form-group col-md-12">
            <%= f.label :"メールアドレス", class: "col-md-4 control-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-4 form-control-static", placeholder: 'sample@example.com' %>
          </div>

          <div class="form-group col-md-12">
            <%= f.label :"パスワード", class: "col-md-4 control-label" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "col-md-4 form-control-static password", placeholder: 'パスワード' %>
          </div>

          <div class="form-group col-md-12">
            <%= f.label :（確認用）, class: "col-md-4 control-label"%>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-md-4 form-control-static password", placeholder: '（確認用）' %>
          </div>

          <div class="action">
            <%= f.submit "新規登録",class: 'btn btn-outline-secondary btn-lg' %>
          </div>
        </div>
      <% end %>
      <div class="text-center">
        <h2>既に登録済みの方</h2>
        <p><%= render "members/shared/links" %>からログインしてください</p>
      </div>
    </div>
  </div>
</div>
