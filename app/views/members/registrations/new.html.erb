<div class="my-4 offset-1"><h3 class="page_title">新規会員登録</h3></div>
<div class="new-product-form col-8 offset-2">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <form>
      <dl>
        <dt class="pb-4">
          <%= f.label :名前, class: 'text-primary mr-5 pt-2' %>
          <div class="d-flex">
            <%= f.label :（姓）, class: 'pt-2' %>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'form-control', placeholder: '令和' %>
            <%= f.label :（名）, class: 'pt-2 pl-4' %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: 'form-control', placeholder: '道子' %>
          </div>
        </dt>

        <dt class="pb-4">
          <%= f.label :フリガナ, class: 'text-primary mr-5 pt-2' %>
          <div class="d-flex">
            <%= f.label :（セイ）, class: 'pt-2' %>
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: 'form-control', placeholder: 'レイワ' %>
            <%= f.label :（メイ）, class: 'pt-2 pl-4' %>
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: 'form-control', placeholder: 'ミチコ' %>
          </div>
        </dt>

        <dt class="pb-4">
          <%= f.label :メールアドレス, class: 'text-primary mr-5 pt-2' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'sample@example.com' %>
        </dt>

        <dt class="pb-4">
          <%= f.label :郵便番号, class: 'text-primary mr-5 pt-2' %>
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: 'form-control', placeholder: '0000000' %>
        </dt>

        <dt class="pb-4">
          <%= f.label :住所, class: 'text-primary mr-5 pt-2' %>
          <%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'form-control', placeholder: '東京都渋谷区代々木神園町0-0' %>
        </dt>

        <dt class="pb-4">
          <%= f.label :電話番号, class: 'text-primary mr-5 pt-2' %>
          <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: 'form-control', placeholder: '000-0000-0000' %>
        </dt>

        <dt class="pb-2">
          <%= f.label :password, class: 'text-primary mr-5 pt-2' %>
          <div class="d-flex pb-4">
            <% if @minimum_password_length %>
            <em>（<%= @minimum_password_length %> 文字以上）</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          </div>
          <div class="d-flex">
            <%= f.label :（確認用） %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div>
        </dt>
      </dl>

      <div class="actions pb-5 text-center">
        <%= f.submit "新規登録",class: 'btn btn-outline-secondary btn-lg' %>
      </div>
    </form>
  <% end %>
</div>
<div class="text-center">
  <h2>既に登録済みの方</h2>
  <p><%= render "members/shared/links" %>からログインしてください</p>
</div>

