<main class="text-center form-signin">
  <h2>新規会員登録</h2>
  <div class="container">
    <div class="row" style="margin:40px;">
      <div class="mx-auto" style="width: 600px;">
        <div class="border border-secondary rounded bg-light text-dark" style="padding:10px;">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "members/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.label :名前, class: 'text-primary' %>
              <div class="d-flex p-4 border-bottom">
                <div class="col-4 mx-auto">
                  <%= f.label :（姓） %>
                  <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'form-control', placeholder: '冷和' %>
                </div>
                <div class="col-4 mx-auto">
                  <%= f.label :（名） %>
                  <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: 'form-control', placeholder: '道子' %>
                </div>
              </div>
            </div>

            <div class="field p-2">
              <%= f.label :フリガナ, class: 'text-primary' %>
              <div class="d-flex p-4 border-bottom">
                <div class="col-4 mx-auto">
                  <%= f.label :（セイ） %>
                  <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: 'form-control', placeholder: 'レイワ' %>
                </div>
                <div class="col-4 mx-auto">
                  <%= f.label :（メイ） %>
                  <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: 'form-control', placeholder: 'ミチコ' %>
                </div>
              </div>
            </div>

            <div class="field">
              <%= f.label :メールアドレス, class: 'text-primary' %>
              <div class="d-flex p-4 border-bottom">
                <div class="col-8 mx-auto">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'sample@example.com' %>
                </div>
              </div>
            </div>

            <div class="field p-2">
              <%= f.label :郵便番号, class: 'text-primary' %>
              <div class="d-flex p-4 border-bottom">
                <div class="col-8 mx-auto">
                  <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: 'form-control', placeholder: '000-0000' %>
                </div>
              </div>
            </div>

            <div class="field">
              <%= f.label :住所, class: 'text-primary' %>
              <div class="d-flex p-4 border-bottom">
                <div class="col-12 mx-auto">
                  <%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'form-control', placeholder: '東京都渋谷区代々木神園町0-0' %>
                </div>
              </div>
            </div>

            <div class="field p-2">
              <%= f.label :電話番号, class: 'text-primary' %>
              <div class="d-flex p-4 border-bottom">
                <div class="col-8 mx-auto">
                  <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class: 'form-control', placeholder: '000-0000-0000' %>
                </div>
              </div>
            </div>

            <div class="field">
              <%= f.label :password, class: 'text-primary' %>
              <div class="d-flex p-4">
                <div class="col-8 mx-auto">
                  <% if @minimum_password_length %>
                  <em>（<%= @minimum_password_length %> 文字以上）</em>
                  <% end %>
                  <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
                </div>
              </div>
            </div>

            <div class="field">
              <%= f.label :（確認用） %>
              <div class="d-flex pb-4 border-bottom">
                <div class="col-8 mx-auto">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
                </div>
              </div>
            </div>

            <div class="actions p-4">
              <%= f.submit "新規登録",class: 'btn btn-outline-secondary btn-lg' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <h2>既に登録済みの方</h2>
  <p><%= render "members/shared/links" %>からログインしてください</p>
</main>