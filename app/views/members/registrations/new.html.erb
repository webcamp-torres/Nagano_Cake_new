<main class="text-center">
  <div class="col-md-offset-3 mx-auto" style="width: 200px;">
    <h2 class="h3 mb-3 fw-normal">新規会員登録</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "members/shared/error_messages", resource: resource %>
    
      <div class="field">
        <%= f.label :名前 class: 'control-label' %>
        <%= f.label :（姓） %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'form-control', placeholder: '令和' %>
        <%= f.label :（名） %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div>
    
      <div class="field">
        <%= f.label :フリガナ %>
        <%= f.label :（セイ） %>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
        <%= f.label :（メイ） %>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
      </div>
    
      <div class="field">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    
      <div class="field">
        <%= f.label :郵便番号 %>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </div>
    
      <div class="field">
        <%= f.label :住所 %>
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>
    
      <div class="field">
        <%= f.label :電話番号 %>
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
      </div>
    
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>（<%= @minimum_password_length %> 文字以上）</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    
      <div class="field">
        <%= f.label :password（確認用） %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    
      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>
  </div>
    
  <h2>既に登録済みの方</h2>
  <p><%= render "members/shared/links" %>からログインしてください</p>
</main>