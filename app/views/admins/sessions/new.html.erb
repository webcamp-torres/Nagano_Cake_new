<main class="text-center form-signin">
  <h2>管理者はこちら</h2>
  <div style="margin-top:100px;">
    <h4>管理者
    ログイン</h4>
  </div>
  <div class="container">
    <div class="row" style="margin-bottom:100px;">
      <div class="mx-auto" style="width: 600px;">
        <div class="border border-secondary rounded bg-light text-dark" style="padding:10px;">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field field pb-2">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'メールアドレス' %>
            </div>
          
            <div class="field pb-4">
              <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'パスワード' %>
            </div>
          
            <!--ワイヤーフレームにはないのでコメントアウトにします-->
            <!--<%# if devise_mapping.rememberable? %>-->
            <!--  <div class="field">-->
            <!--    <%# f.check_box :remember_me %>-->
            <!--    <%# f.label :remember_me %>-->
            <!--  </div>-->
            <!--<%# end %>-->
          
            <div class="actions pb-3">
              <%= f.submit "ログイン", class: 'btn btn-outline-success btn-lg' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>
