  <h2>ジャンル一覧</h2><p>（全<%= @datas.count %>件）</p>

  <% if @datas.empty? %>
    <h2>該当する商品はありません</h2>
  <% end %>
  <table class='table table-hover'>
    <thead class="thead-light">
      <tr>
         <th>商品ID</th>
         <th>画像</th>
         <th>商品名</th>
         <th>ジャンル</th>
         <th>税抜価格</th>
         <th>ステータス</th>
      </tr>
    </thead>
        <tbody>
          <% @datas.each do |data| %>
            <tr>
               <td><%= data.id %></td>
               <td><%= attachment_image_tag(data, :image, :fill, 250, 180,  fallback: "no_image.jpeg", size:'250x180') %><br></td>
               <td><%= link_to data.name, item_path(data.id) %></td>
               <td><%=  data.name %></td><br>
               <td>￥<%= data.price %></td>
               <td><%= data.sales_status ? "販売中" : "売り切れ" %></td>
             </tr>
           <% end %>
        </tbody>
  </table>
