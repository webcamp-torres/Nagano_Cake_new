<!--<div class="my-4 offset-1"><h3 class="page_title">配送先登録</h3></div>-->
<div class="new-product-form col-8 offset-2">
  <%= form_with model:@delivery, local:true do |f| %>
    <dl>
      <dt class="pb-4">
        <%= f.label :郵便番号（ハイフンなし）, class: 'mr-5 pt-2' %>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: '0000000', class: 'form-control col-7' %>
      </dt>
    
      <dt class="pb-4">
        <%= f.label :住所, class: 'mr-5 pt-2' %>
        <%= f.text_field :address, autofocus: true, autocomplete: "postal_code", placeholder: '東京都渋谷区代々木神園町0-0', class: 'form-control col-7' %>
      </dt>
    
      <dt class="pb-4">
        <%= f.label :宛名, class: 'mr-5 pt-2' %>
        <%= f.text_field :name, autofocus: true, autocomplete: "postal_code", placeholder: '令和道子', class: 'form-control col-7' %>
      </dt>
    </dl>
  
    <div class="actions pb-5">
      <%= f.submit "新規登録", class: 'btn btn-outline-success btn-lg' %>
    </div>
  <% end %>
</div>

<div class="col-8 text-center"><h3>配送先一覧</h3></div>
<div class="container">
  <div class="mx-5">
    <table class='table table-hover table-inverse'>
      <thead class="thead-light">
        <tr>
          <th scope="col">郵便番号</th>
          <th scope="col">住所</th>
          <th scope="col">宛名</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <div class="delivery-list">
          <% @deliveries.each do |delivery| %>
            <tr>
              <td class="bg-white"><%= delivery.postal_code %></td>
              <td class="bg-white"><%= delivery.address %></td>
              <td class="bg-white"><%= delivery.name %></td>
              <td class="bg-white">
                <%= link_to "削除する", delivery_path(delivery), class: "btn btn-sm btn-danger", method: :delete %>
                <%= link_to "編集する", edit_delivery_path(delivery), class: 'btn btn-sm btn-success' %>
              </td>
            </tr>
          <% end %>
        </div>
      </tbody>
    </table>
  </div>
</div>

