<h2>配送先登録/一覧</h2>

<%= form_with model:@delivery, local:true do |f| %>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: '0000000' %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, autocomplete: "postal_code", placeholder: '東京都渋谷区代々木神園町0-0' %>
  </div>

  <div class="field">
    <%= f.label :宛名 %>
    <%= f.text_field :name, autofocus: true, autocomplete: "postal_code", placeholder: '令和道子' %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: 'btn btn-outline-success btn-lg' %>
  </div>

<% end %>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.postal_code %></td>
        <td><%= delivery.address %></td>
        <td><%= delivery.name %></td>
        <td>
          <%= link_to "削除する", delivery_path(delivery), class: "btn btn-sm btn-danger", method: :delete %>
          <%= link_to "編集する", edit_delivery_path(delivery), class: 'btn btn-sm btn-success' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

