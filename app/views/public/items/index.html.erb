<div class="container">
   <div class="row mx-auto">
        <% render 'layouts/search' %>
    <div class="roy d-flex justify-content-center">
      <% @genres.each do |genre| %>
        <%= link_to genre.name, search_path('search[value]': genre.id, 'search[how]': "match"), class: "btn btn-outline-secondary" %>
      <% end %>
    </div>
  </div>
      <div class="main-content col-md-10">
       <div class="row">
          <% @items.each do |item| %>
            <div class="col">
               <%= link_to item_path(item.id) do %>
                 <span><%= attachment_image_tag(item, :image, :fill, 200, 200, fallback: "no_imag.jpg") %></span><br>
               <% end %>
                <span><%= item.name %></span><br>
                <span><%= item.price %></span>
            </div>
          <% end %>
        </div>
      </div>
</div>