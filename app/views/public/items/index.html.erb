<div class="title text-center">
  <h3>All items</h3>
  <p>( 全<%= @items.count %>件 )</p>
</div>
<!---------ジャンル一覧ボタン------->
<div class="genre-content">
   <span class="genre">
      <% @genres.each do |genre| %>
        <%= link_to genre.name, search_path('search[value]': genre.id, 'search[how]': "match"), class: "btn btn-outline-secondary" %>
      <% end %>
  </span>
</div>
<div class="container mt-3">
      <!--<div class="main-content">-->
    <div class="row">
      <% @items.each do |item| %>
        <% if item.sales_status == true %>
          <div class="col">
             <%= link_to item_path(item.id) do %>
               <span class="img_container">
                 <%= attachment_image_tag(item, :image, size: "200x200", fallback: "no_imag.jpg") %><br>
               </span>
             <% end %>
             <div class="font-weight-bold"><%= item.name %></div><br>
             <div class="font-weight-light mb-5"><%= item.sales_status ? "販売中" : "売り切れ" %></div>
             <div class="font-weight-light mb-5">¥<%= item.price %></div>
          </div>
        <% else %>
          <div class="col">
             <span class="img_container">
               <%= attachment_image_tag(item, :image, size: "200x200", fallback: "no_imag.jpg") %><br>
             </span>
             <div class="font-weight-bold"><%= item.name %></div><br>
             <div class="font-weight-light mb-5"><%= item.sales_status ? "販売中" : "売り切れ" %></div>
             <div class="font-weight-light mb-5">¥<%= item.price %></div>
         </div>
        <% end %>
      <% end %>
   </div>
</div>