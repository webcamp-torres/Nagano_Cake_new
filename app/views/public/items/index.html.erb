<div class="container">
   <div class="row col-md-12 mx-auto">
     <div class="mt-3 mb-3">

        <table class="table table-bordered genre-table">
         <thead>
           <tr>
             <th>ジャンル検索</th>
           </tr>
         </thead>
         <tbody>
           <% @genres.each do |genre| %>
             <tr>
               <td>
                 <%= link_to genre.name, search_path('search[value]': genre.id, 'search[how]': "match") %>
               </td>
             </tr>
            <% end %>
         </tbody>
        </table>
       <div class="item-list">
        繰り返し表示
       </div>
     </div>
    </div>
</div>