 <div class="cart-step3"></div>

  <div class='container p-3'>
    <div class="main-visual">
       <div class="h3 mb-3 page_title">注文情報確認</div>
    </div>
     <div class='row mt-5'>
       <div class='col-md-9'>
         <table class='table table-bordered'>
           <thead class='table-active'>
             <tr>
               <th>商品名</th>
               <th>単価（税込み）</th>
               <th>数量</th>
               <th>小計</th>
             </tr>
           </thead>
           <tbody>
             <% total = 0 %>
             <% @cart_items.each do |cart_item| %>
               <tr>
                 <td>
                   <%= attachment_image_tag cart_item.item, :image, size: "50x50" %>
                   <%= cart_item.item.name %>
                 </td>
                 <td> <%= (cart_item.item.price * 1.1).floor.to_s(:delimited) %></td>
                 <td><%= cart_item.amount %></td>
                 <td> <%= ((cart_item.item.price * 1.1).floor * cart_item.amount).to_s(:delimited) %></td>
                 <% total += (cart_item.item.price * 1.1).floor * cart_item.amount %>
               </tr>
             <% end %>
           </tbody>
         </table>
       </div>

       <div class='col-md-3'>
         <table class='table table-bordered'>
           <tbody>
            <tr>
              <th class='table-active'>送料</th>
              <td> <%= @order.shipping_fee %></td>
            </tr>
            <tr>
              <th class='table-active'>商品合計</th>
              <td> <%= total.to_s(:delimited) %></td>
            </tr>
            <tr>
              <th class='table-active'>請求金額</th>
              <td> <%= (@order.shipping_fee + total).to_s(:delimited) %></td>
            </tr>
          </tbody>
        </table>
      </div>
   </div>
</div>
  <div class='row'>
    <div class='col-md-10 ml-auto'>
      <table class='table table-borderless'>
        <tbody>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <th>お届け先</th>
            <td>〒<%= @order.postal_code %> <%= @order.address %></br><%= @order.name %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class='text-center mb-5'>
    <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
      <%= f.hidden_field :payment_method, :value => @order.payment_method %>
      <%= f.hidden_field :postal_code, :value => @order.postal_code %>
      <%= f.hidden_field :address, :value => @order.address %>
      <%= f.hidden_field :name, :value => @order.name %>
      <%= f.hidden_field :total_payment, :value => total %>
      <%# f.hidden_field :カラム名, :value => カラムに対してどんな情報を入れたいのか指定する(変数) %>
      <%= f.submit '注文を確定する', class:"btn btn-outline-secondary" %>
    <% end %>
  </div>

