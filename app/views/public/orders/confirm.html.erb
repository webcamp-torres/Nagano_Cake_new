<div class='container p-3'>
  <h4 class="title">注文情報確認</h4>

  <div class='row mt-3'>
    <div class='col-md-9'>
      <table class='table table-bordered'>
        <thead class='table-active'>
          <tr>
            <th>商品名</th>
            <th>単価（税込み）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% total = 0 %>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= attachment_image_tag cart_item.item, :image, size: "50x50" %>
                <%= cart_item.item.name %>
              </td>
              <td><%= (cart_item.item.price * 1.1).floor %></td>
              <td><%= cart_item.amount %></td>
              <td><%= (cart_item.item.price * 1.1).floor * cart_item.amount %></td>
              <% total += (cart_item.item.price * 1.1).floor * cart_item.amount %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class='col-md-3'>
      <table class='table table-bordered'>
        <tbody>
          <tr>
            <th class='table-active'>送料</th>
            <td><%= @order.shipping_fee %></td>
          </tr>
          <tr>
            <th class='table-active'>商品合計</th>
            <td><%= total %></td>
          </tr>
          <tr>
            <th class='table-active'>請求金額</th>
            <td><%= @order.shipping_fee + total %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class='row'>
    <div class='col-md-10'>
      <table class='table table-borderless'>
        <tbody>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <th>お届け先</th>
            <td>〒<%= @order.postal_code %> <%= @order.address %></br><%= @order.name %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

</div>