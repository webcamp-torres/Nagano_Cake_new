<div class='container p-3'>
  <h4 class="title">注文履歴詳細</h4>

  <div class='row mt-3'>
    <div class='col-md-7'>
      <h5 class='font-weight-bold'>注文情報</h5>
      <table class='table table-bordered'>
        <tbody>
          <tr>
            <th class='table-active'>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th class='table-active'>配送先</th>
            <td>
              〒<%= @order.postal_code %></br>
              <%= @order.address %></br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th class='table-active'>支払方法</th>
            <td><%= @order.payment_method %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class='col-md-3'>
      <h5 class='font-weight-bold'>請求情報</h5>
      <table class='table table-bordered'>
        <tbody>
          <tr>
            <th class='table-active'>商品合計</th>
            <td><%= @order.total_payment.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th class='table-active'>配送料</th>
            <td><%= @order.shipping_fee %></td>
          </tr>
          <tr>
            <th class='table-active'>ご請求額</th>
            <td><%= (@order.total_payment + @order.shipping_fee).to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class='row mt-3'>
    <div class='col-md-8'>
      <h5 class='font-weight-bold'>注文内容</h5>
      <table class='table table-bordered'>
        <thead class='table-active'>
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_items.each do |order_item| %>
            <tr>
              <td><%= order_item.item.name %></td>
              <td><%= (order_item.item.price * 1.1).floor.to_s(:delimited) %></td>
              <td><%= order_item.amount %></td>
              <td><%= ((order_item.item.price * 1.1).floor * order_item.amount).to_s(:delimited) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>